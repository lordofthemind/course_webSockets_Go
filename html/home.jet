<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .chatbox {
            outline: 1px solid silver;
            min-height: 160px;
            overflow-y: scroll;
            padding: 0.5em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">this is a Home page.</h1>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-8">
                <h3 class="mt-3">Chat</h3>

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" id="username" autocomplete="off">
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <input type="text" class="form-control" name="message" id="message" autocomplete="off">
                </div>
                <input type="hidden" name="action" id="action">
                <hr>
                <div id="output" class="chatbox">

                </div>
            </div>
            <div class="col-md-4">
                <h3 class="mt-3">Who's Online?</h3>
            </div>
        </div>
    </div>


<script>
    let socket = null;

    document.addEventListener('DOMContentLoaded', function() {
        socket = new WebSocket('ws://localhost:9090/ws');

        socket.onopen = () => {
            console.log('Connection established');
        };

        socket.onclose = () => {
            console.log('Connection closed');
        };

        socket.onmessage = msg => {
            console.log('Message: ' + msg.data);
            let data = JSON.parse(event.data);
            let output = document.getElementById('output');
            let message = document.createElement('div');
            message.innerHTML = `<strong>${data.username}</strong>: ${data.message}`;
            output.appendChild(message);
        };

        socket.onerror = error => {
            console.log('Error: ' + error.message);
        };

    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>